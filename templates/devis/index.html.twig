        {% elseif mahaie.getCode == "TR" %}
            {% set prix = mahaie.getPrix * longueur %}
{% endif %} 


{% if hauteur > 1.5  %}
    {% set montant = prix * 1.5 %}
{% else %}
    {% set montant = prix * 1 %}
{% endif %}

{% if choix == 'e'  %}
    {% set Totalremise = montant * remise %}
        <h2> Vous avez obtenu une remise de : {{Totalremise}}</h2>

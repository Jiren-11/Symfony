{% extends 'base.html.twig' %}

{% block tilte %}Haie
{% endblock %}

{% block content %}
	<link rel="stylesheet" href="{{asset("css/style.css")}}">
	<div class="card-wrapper">
		<div class="cardo">

			<h1>Voici les infos de<br>
				la haie :
				{{ haie.nom }}</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Code</th>
						<td>{{ haie.code }}</td>
						<a href="{{ path('app_haie_edit', {'code': haie.code}) }}"></a>
						<td>
							<a href="{{ path('app_haie_edit', {'code': haie.code}) }}">
								<script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
									<lord-icon src="https://cdn.lordicon.com/alzqexpi.json" trigger="hover" style="width:70px;height:70px"></lord-icon>
								</a>
							</div>
						</td>
					</tr>
					<tr>
						<th>Nom</th>
						<td>{{ haie.nom }}</td>

					</tr>

					<tr>
						<th>Prix</th>
						<td>{{ haie.prix }}</td>
						<td>{{ include('haie/_delete_form.html.twig') }}</td>


					</tr>
				</tbody>
			</table>
			<a href="{{ path('app_haie_index') }}"> 
			<div class="icon">
			<script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
			<lord-icon src="https://cdn.lordicon.com/qhaguvvs.json" trigger="hover" style="width:50px;height:50px">
			</lord-icon>
	    </div></a>

{% endblock %}
